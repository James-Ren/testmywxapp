/* page/signin/signin.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color:#f5f5f5;
  margin-bottom: 30rpx;
  padding:70rpx 0 50rpx 0;

}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname{
  color: #aaa;
}
.userli{
  background-color: #f1f1f1;
  display: flex;
  flex-direction: row;
  
}
.right-arrow{
  float:right;
  margin-right:10rpx;
}
.userorder-title{
  margin:10rpx 0 10rpx 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
}
.left-title{
  float: left;
}
.logout{
  display: flex;
  align-items: center;
  margin-top:10rpx;
  text-align: center;
}